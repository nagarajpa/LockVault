{
  "manifest_version": 3,
  "name": "LockVault",
  "description": "Zero-knowledge, cloud-synced password manager",
  "version": "1.0.0",
  "icons": {
    "16": "icons/icon-16.png",
    "48": "icons/icon-48.png",
    "128": "icons/icon-128.png"
  },
  "permissions": ["storage", "identity", "alarms", "activeTab"],
  "host_permissions": ["https://www.googleapis.com/*"],
  "oauth2": {
    "client_id": "90954327714-232mefab1eh129s5210j8ofk9icdedr0.apps.googleusercontent.com",
    "scopes": ["https://www.googleapis.com/auth/drive.appdata"]
  },
  "background": {
    "service_worker": "src/background/serviceWorker.ts"
  },
  "action": {
    "default_popup": "src/popup.html",
    "default_icon": {
      "16": "icons/icon-16.png",
      "48": "icons/icon-48.png",
      "128": "icons/icon-128.png"
    }
  },
  "content_scripts": [
    {
      "matches": ["<all_urls>"],
      "js": ["src/content/autofill.ts"],
      "css": ["src/content/autofill.css"]
    }
  ]
}
